@using Onmiva.Models;

    @{
        ViewBag.Title = "OrdersList";
    }

    <h2>Užsakymų sąrašas</h2>

@Html.ActionLink("Filtruoti užsakymus", "FilterOrders", "OrderManagement")
<br>
@Html.ActionLink("Sukurti užsakymą", "OrderCreate", "OrderManagement")
<br>
@Html.ActionLink("Atgal", "Index", "Home")


<table class="table table-striped">
    <thead>
        <th>Id</th>
        <th>Data</th>
        <th>Suma</th>
        <th>Užsakymo būsena</th>
    </thead>


    @foreach (var i in Model)
    {
        <tr>
            <td>@i.Id </td>
            <td>@i.Date</td>
            <td>@i.Amount</td>
            <td>@i.OrderStatus</td>
            <td>@Html.ActionLink("Peržiūrėti", "OrderView", new { id = @i.Id })</td>
</tr>
    }
</table>